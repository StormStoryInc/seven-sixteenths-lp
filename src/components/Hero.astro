<section class="hero" id="hero">
  <!-- Animated gradient orbs -->
  <div class="hero-orbs" aria-hidden="true">
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
    <div class="orb orb-3"></div>
  </div>

  <!-- Dot grid -->
  <div class="hero-grid" aria-hidden="true"></div>

  <!-- Noise texture -->
  <div class="hero-noise" aria-hidden="true"></div>

  <div class="hero-content">
    <div class="hero-badge hero-entrance e-fade d1">
      <span class="badge-dot"></span>
      Coming Soon
    </div>

    <h1 class="hero-title hero-entrance e-scale d2">
      <span class="title-7">7</span><span class="title-slash">/</span><span class="title-16">16</span>
    </h1>

    <p class="hero-tagline hero-entrance e-fade-up d3">瞬間をシェア。匿名のまま。</p>
    <p class="hero-tagline-en hero-entrance e-fade-up d4">Share moments. Stay anonymous.</p>

    <div class="hero-divider hero-entrance e-fade d5"></div>

    <p class="hero-desc hero-entrance e-fade-up d6">
      あなたの写真から7枚をランダムに選び、<br />1日1枚、匿名で友達に届けます。
    </p>
  </div>

  <div class="scroll-indicator hero-entrance e-fade d8">
    <div class="scroll-line"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0;
    overflow: hidden;
    background: var(--black);
  }

  /* Animated gradient orbs */
  .hero-orbs {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    pointer-events: none;
    will-change: transform;
  }

  .orb-1 {
    width: 600px;
    height: 600px;
    top: 20%;
    left: 50%;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.15), transparent 70%);
    animation: orbFloat 20s linear infinite;
  }

  .orb-2 {
    width: 400px;
    height: 400px;
    top: 60%;
    left: 30%;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.08), transparent 70%);
    animation: orbFloat 25s linear infinite reverse;
  }

  .orb-3 {
    width: 300px;
    height: 300px;
    top: 30%;
    left: 70%;
    background: radial-gradient(circle, rgba(168, 85, 247, 0.06), transparent 70%);
    animation: orbFloat 30s linear infinite;
  }

  /* Dot grid */
  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 1px 1px, rgba(255, 255, 255, 0.04) 1px, transparent 0);
    background-size: 40px 40px;
    mask-image: radial-gradient(ellipse 45% 45% at 50% 50%, black 0%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 45% 45% at 50% 50%, black 0%, transparent 70%);
  }

  /* Noise */
  .hero-noise {
    position: absolute;
    inset: 0;
    opacity: 0.025;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
    background-size: 256px 256px;
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    text-align: center;
    padding: 0 1.5rem;
    z-index: 1;
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.3rem 0.85rem;
    border-radius: 100px;
    border: 1px solid rgba(139, 92, 246, 0.15);
    background: rgba(139, 92, 246, 0.05);
    color: var(--purple-light);
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 3rem;
  }

  .badge-dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: var(--purple);
    box-shadow: 0 0 6px var(--purple);
    animation: pulse 3s ease-in-out infinite;
  }

  /* Title — split for potential animation */
  .hero-title {
    font-size: clamp(7rem, 20vw, 16rem);
    font-weight: 900;
    letter-spacing: -0.05em;
    line-height: 0.8;
    margin-bottom: 2.5rem;
    position: relative;
    display: inline-block;
  }

  .title-7, .title-slash, .title-16 {
    background: linear-gradient(180deg, #ffffff 20%, rgba(255, 255, 255, 0.25) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .title-slash {
    background: linear-gradient(180deg, var(--purple-light) 20%, rgba(139, 92, 246, 0.2) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-tagline {
    font-size: clamp(1.1rem, 2.2vw, 1.4rem);
    font-weight: 500;
    color: var(--white);
    letter-spacing: 0.14em;
    margin-bottom: 0.5rem;
  }

  .hero-tagline-en {
    font-size: clamp(0.75rem, 1.2vw, 0.875rem);
    font-weight: 400;
    color: var(--gray-600);
    letter-spacing: 0.08em;
  }

  .hero-divider {
    width: 32px;
    height: 1px;
    background: var(--purple);
    margin: 2.5rem auto;
    opacity: 0.4;
  }

  .hero-desc {
    font-size: clamp(0.85rem, 1.2vw, 0.95rem);
    color: var(--gray-500);
    line-height: 2;
    max-width: 360px;
    margin: 0 auto;
  }

  /* Scroll indicator — animated line */
  .scroll-indicator {
    position: absolute;
    bottom: 2.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(180deg, var(--purple-light), transparent);
    animation: drift 2.5s ease-in-out infinite;
  }

  @media (max-width: 768px) {
    .hero-title {
      margin-bottom: 2rem;
    }
    .hero-desc br {
      display: none;
    }
  }
</style>
